{
  "name": "folder-normalizer",
  "version": "1.0.0",
  "description": "Cross-platform Electron-based desktop application for VFX folder normalization",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently --kill-others \"yarn dev:renderer\" \"yarn dev:electron:delayed\"",
    "dev:win": "start-dev.bat",
    "dev:simple": "concurrently \"yarn dev:renderer\" \"yarn dev:electron\"",
    "dev:renderer": "vite --port 3001",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main.js",
    "dev:electron": "tsc -p tsconfig.main.json && electron dist/main.js",
    "dev:electron:wait": "wait-on http://localhost:3001 && yarn dev:electron",
    "dev:electron:delayed": "powershell -Command \"Start-Sleep -Seconds 5\" && yarn dev:electron",
    "dev:full": "concurrently \"yarn dev:renderer\" \"yarn dev:electron\"",
    "start": "yarn dev",
    "build": "yarn build:renderer && yarn build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "keywords": [
    "electron",
    "vfx",
    "folder",
    "normalizer",
    "react",
    "typescript"
  ],
  "author": "VFX Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@tabler/icons-react": "^2.34.0",
    "@types/ws": "^8.18.1",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "sqlite3": "^5.1.6",
    "ws": "^8.18.2",
    "zustand": "^4.4.1"
  },
  "build": {
    "appId": "com.vfx.folder-normalizer",
    "productName": "Folder Normalizer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "python/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
